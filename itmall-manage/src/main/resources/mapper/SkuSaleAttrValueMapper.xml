<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wgml.itmall.manage.mapper.SkuSaleAttrValueMapper">
    <select  id ="selectSkuSaleAttrValueListBySpu" resultMap="skuSaleAttrValueMap">
        SELECT
            sale_attr_value_id,
            sku_id,
            sale_attr_value_name
        FROM
            sku_sale_attr_value ssav,
            sku_info si
        WHERE
            ssav.sku_id = si.id
          AND si.spu_id = #{0}
        ORDER BY si.id ,ssav.sale_attr_id
    </select>
    <resultMap id="skuSaleAttrValueMap" type="com.wgml.itmall.bean.manage.SkuSaleAttrValue" autoMapping="true">
        <id property="id" column="id" ></id>
    </resultMap>
</mapper>
